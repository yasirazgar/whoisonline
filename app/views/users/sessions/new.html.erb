<div class="login-page">
  <div class="form">
    <h3> <%= t(:login) %> </h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => 'login-form form') do |f| %>
      <%= f.email_field(:email, :placeholder => 'email', autofocus: true, :class => 'input') %>

      <%= f.password_field(:password, autocomplete: "off", :placeholder => 'password', :class => 'input') %>

      <%= f.submit(t(:login), :class => 'button') %>

      <p class="message">Not registered?
        <%= link_to(t(:signup), new_registration_path(resource_name)) %><br />
      </p>
    <% end -%>
  </div>
</div>
